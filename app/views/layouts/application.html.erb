<!DOCTYPE html>
<html>
	
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="background: #EEEEEE;">

<div class="container">
	
	<% if alert %>
	<div class="alert alert-error">
		<%= alert %>
	</div>
	<% end %>
	<% if notice %>
	<div class="notice notice-error">
		<%= notice %>
	</div>
	<% end %>
	
	<%= yield %>
</div>
	

</body>
</html>
